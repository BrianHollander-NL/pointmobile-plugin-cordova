<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-pointmobileplugin" version="0.0.1">
    <name>PM66 Plugin</name>

    <description>An Android Cordova plugin that implements features of the PM66 Android device.</description>
    <license>MIT</license>

    <keywords>cordova,android,pointmobile</keywords>
    <repo>https://github.com/timeseriesBH/pointmobile-plugin.git</repo>
    <issue>https://github.com/timeseriesBH/pointmobile-plugin/issues</issue>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

    <js-module src="www/pointmobileplugin.js" name="pointmobileplugin">
        <clobbers target="window.plugins.pointmobileplugin" />
    </js-module>
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="PointMobilePlugin">
                <param name="android-package" value="nl.valuga.pointmobileplugin"/>
            </feature>
        </config-file>

       <source-file src="src/android/PointMobilePlugin.java" target-dir="src/com/valugacordova/plugin" />
    </platform>
</plugin>